IF boilerType == nonCondensingBoiler:
	IF (qRequired > 0.9 * QbX_currentStage FOR 10 minutes):
		SET efficiencyCondition = TRUE
	ELSE:
		SET efficiencyCondition = FALSE
	ENDIF	
ELSE:
	IF (qRequired > 1.5 * bStageMin_nextStage FOR 10 minutes) AND (hotWaterFlowRate > minFlowSetpoint_nextStage):
		SET efficiencyCondition = TRUE
	ELSE:
		SET efficiencyCondition = FALSE
	ENDIF
ENDIF