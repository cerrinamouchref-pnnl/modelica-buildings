WHILE boilerPlant is ON
    IF boilerPlantOnTime > 15 minutes
         IF outdoorAirTemperature > boilerLockoutTemperature 
			OR..hotWaterSupplyResetRequests < numberOfIgnores 
			OR..boilerPlantEnableSchedule is OFF
				set boilerPlant OFF
		 ELSE
			Do nothing
         ENDIF
	ELSE
		Do nothing	
    ENDIF
ENDWHILE

WHILE boilerPlant is OFF
    IF boilerPlantOffTime > 15 minutes
         IF outdoorAirTemperature < boilerLockoutTemperature 
			AND..hotWaterSupplyResetRequests > numberOfIgnores 
			AND..boilerPlantEnableSchedule is ON
				set boilerPlant ON
		 ELSE
			Do nothing
         ENDIF
	ELSE
		Do nothing
	ENDIF
ENDWHILE 	
	